<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Tickets - Football Club</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <style>
        .page-header {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            color: white;
            padding: 2rem 0;
        }
        
        .ticket-card {
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        
        .ticket-card:hover {
            transform: translateY(-5px);
        }
        
        .ticket-header {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            padding: 1.5rem;
        }
        
        .ticket-body {
            padding: 1.5rem;
        }
        
        .status-badge {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
        }
        
        .status-confirmed {
            background: #d4edda;
            color: #155724;
        }
        
        .status-reserved {
            background: #fff3cd;
            color: #856404;
        }
        
        .status-cancelled {
            background: #f8d7da;
            color: #721c24;
        }
        
        .confirmation-code {
            background: #f8f9fa;
            border: 2px dashed #dee2e6;
            border-radius: 10px;
            padding: 1rem;
            text-align: center;
            font-family: 'Courier New', monospace;
            font-weight: bold;
            letter-spacing: 2px;
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
        
        .stats-card {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="page-header">
        <div class="container">
            <h1><i class="fas fa-ticket-alt me-2"></i>My Tickets</h1>
            <p class="mb-0">View and manage your event tickets</p>
        </div>
    </div>
    
    <div class="container my-5">
        <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i><%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i><%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>
        
        <% if (stats.total_tickets > 0) { %>
        <div class="stats-card">
            <div class="row text-center">
                <div class="col-md-3">
                    <h3 class="text-primary mb-1"><%= stats.total_tickets %></h3>
                    <small class="text-muted">Total Tickets</small>
                </div>
                <div class="col-md-3">
                    <h3 class="text-success mb-1"><%= stats.confirmed_tickets %></h3>
                    <small class="text-muted">Confirmed</small>
                </div>
                <div class="col-md-3">
                    <h3 class="text-warning mb-1"><%= stats.reserved_tickets %></h3>
                    <small class="text-muted">Reserved</small>
                </div>
                <div class="col-md-3">
                    <h3 class="text-primary mb-1">$<%= stats.total_spent %></h3>
                    <small class="text-muted">Total Spent</small>
                </div>
            </div>
        </div>
        <% } %>
        
        <% if (tickets && tickets.length > 0) { %>
        <div class="row">
            <% tickets.forEach(function(ticket) { %>
            <div class="col-lg-6">
                <div class="ticket-card">
                    <div class="ticket-header">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="mb-1"><%= ticket.event_name %></h5>
                                <p class="mb-0">
                                    <i class="fas fa-calendar me-2"></i>
                                    <%= new Date(ticket.event_date).toLocaleDateString('en-US', { 
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </p>
                                <% if (ticket.event_time) { %>
                                <p class="mb-0">
                                    <i class="fas fa-clock me-2"></i>
                                    <%= new Date('1970-01-01T' + ticket.event_time + 'Z').toLocaleTimeString('en-US', {
                                        hour: '2-digit',
                                        minute: '2-digit',
                                        timeZone: 'UTC'
                                    }) %>
                                </p>
                                <% } %>
                            </div>
                            <span class="status-badge status-<%= ticket.status %>">
                                <% if (ticket.status === 'confirmed') { %>
                                    <i class="fas fa-check-circle me-1"></i>Confirmed
                                <% } else if (ticket.status === 'reserved') { %>
                                    <i class="fas fa-clock me-1"></i>Reserved
                                <% } else if (ticket.status === 'cancelled') { %>
                                    <i class="fas fa-times-circle me-1"></i>Cancelled
                                <% } %>
                            </span>
                        </div>
                    </div>
                    
                    <div class="ticket-body">
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Quantity:</strong><br>
                                <span class="text-muted"><%= ticket.quantity %> ticket(s)</span>
                            </div>
                            <div class="col-6">
                                <strong>Total Paid:</strong><br>
                                <span class="text-success">$<%= parseFloat(ticket.final_price).toFixed(2) %></span>
                            </div>
                        </div>
                        
                        <% if (ticket.location) { %>
                        <div class="mb-3">
                            <strong>Location:</strong><br>
                            <span class="text-muted"><i class="fas fa-map-marker-alt me-1"></i><%= ticket.location %></span>
                        </div>
                        <% } %>
                        
                        <% if (ticket.discount_applied > 0) { %>
                        <div class="mb-3">
                            <small class="text-success">
                                <i class="fas fa-tag me-1"></i>Member discount applied: -$<%= parseFloat(ticket.discount_applied).toFixed(2) %>
                            </small>
                        </div>
                        <% } %>
                        
                        <% if (ticket.confirmation_code) { %>
                        <div class="confirmation-code">
                            <small>Confirmation Code</small><br>
                            <strong><%= ticket.confirmation_code %></strong>
                        </div>
                        <% } %>
                        
                        <% if (ticket.status === 'reserved' && ticket.reservation_expires_at) { %>
                        <div class="alert alert-warning mt-3">
                            <small>
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Reservation expires: <%= new Date(ticket.reservation_expires_at).toLocaleString() %>
                            </small>
                        </div>
                        <% } %>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                Purchased: <%= new Date(ticket.purchase_date).toLocaleDateString() %>
                                <% if (ticket.payment_status) { %>
                                    | Payment: <span class="text-success"><%= ticket.payment_status %></span>
                                <% } %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        
        <div class="text-center mt-4">
            <a href="/events" class="btn btn-primary">
                <i class="fas fa-ticket-alt me-2"></i>Browse More Events
            </a>
            <a href="/cart" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-shopping-cart me-2"></i>View Cart
            </a>
        </div>
        
        <% } else { %>
        <div class="empty-state">
            <i class="fas fa-ticket-alt fa-4x mb-3"></i>
            <h3>No Tickets Yet</h3>
            <p>You haven't purchased any tickets yet. Explore our upcoming events!</p>
            <a href="/events" class="btn btn-primary btn-lg">
                <i class="fas fa-search me-2"></i>Browse Events
            </a>
        </div>
        <% } %>
    </div>
</body>
<%- include('partials/footer') %>
</html>