<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Football Matches Club</title>
  <link href="https://fonts.googleapis.com/css?family=Oswald:700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/stylesheet/matches.css" />
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <main class="container-fluid p-0">
    <div class="d-flex justify-content-center" style="margin-top: 5px; margin-bottom: 0;">
      <div class="matches-header" style="width: 1350px; min-width: 320px; max-width: 98vw; display: flex; flex-direction: column; align-items: flex-start; padding: 32px 48px;">
        <span style="font-size: 3rem; font-weight: 900; font-family: 'Oswald', Arial, sans-serif;">Football Matches</span>
        
        <!-- Tab Navigation (left-aligned under header) -->
        <div class="matches-tabs-container mt-4" style="padding-left: 0;">
          <button class="matches-tab active" id="results-tab" onclick="showMatchesTab('results')">Results</button>
          <button class="matches-tab" id="tickets-tab" onclick="showMatchesTab('tickets')">Tickets</button>
        </div>
      </div>
    </div>

    <!-- Tab Content -->
    <div class="matches-content">
      <!-- Results Tab Content -->
      <div id="matches-results-tab" class="tab-content" style="display: block;">
        <div class="content-placeholder">
          <p class="text-center text-muted">Score Results</p>
        </div>
      </div>

      <!-- Tickets Tab Content -->
      <div id="matches-tickets-tab" class="tab-content" style="display: none;">
        <div class="content-placeholder">
          <p class="text-center text-muted">User can buy tickets matches here</p>
        </div>
      </div>
    </div>
  </main>

  <!-- JS for Tab Functionality -->
  <script>
    function showMatchesTab(tab) {
      document.getElementById('matches-results-tab').style.display = (tab === 'results') ? 'block' : 'none';
      document.getElementById('matches-tickets-tab').style.display = (tab === 'tickets') ? 'block' : 'none';
      document.getElementById('results-tab').classList.toggle('active', tab === 'results');
      document.getElementById('tickets-tab').classList.toggle('active', tab === 'tickets');
    }
    // Set default tab
    showMatchesTab('results');
  </script>
  <%- include('partials/footer') %>
</body>
</html>