<% const tierData = {
  gold: {
    name: 'GOLD',
    color: '#FFD700',
    bg: 'linear-gradient(135deg, #FFD700 80%, #B8860B 100%)',
    banner: '/images/gold-banner.jpg',
    overview: 'Gold Membership renews automatically at the end of each season but you can cancel anytime. Enjoy the best perks, highest cashback, and exclusive VIP access.',
    closed: false,
    discount: '15%',
    cashback: '3%'
  },
  silver: {
    name: 'SILVER',
    color: '#C0C0C0',
    bg: 'linear-gradient(135deg, #C0C0C0 80%, #888 100%)',
    banner: '/images/silver-banner.jpg',
    overview: 'Silver Membership renews automatically at the end of each season but you can cancel anytime. Great value, extra discounts, and priority booking.',
    closed: false,
    discount: '10%',
    cashback: '2%'
  },
  bronze: {
    name: 'BRONZE',
    color: '#cd7f32',
    bg: 'linear-gradient(135deg, #cd7f32 80%, #8B5C2A 100%)',
    banner: '/images/bronze-banner.jpg',
    overview: 'Bronze Membership renews automatically at the end of each season but you can cancel anytime. Essential benefits and club newsletter access.',
    closed: false,
    discount: '5%',
    cashback: '1%'
  }
};
const t = tierData[tier];
%>
<style>
.tier-banner {
  width: 100%;
  height: 180px;
  display: flex;
  align-items: center;
  justify-content: left;
  color: #fff;
  font-size: 4rem;
  font-family: 'Oswald', Arial, sans-serif;
  font-weight: 900;
  letter-spacing: 6px;
  padding-left: 48px;
  margin-bottom: 0;
  text-shadow: 1px 1px 8px rgba(0,0,0,0.08);
}
.tier-overview {
  background: #fff;
  padding: 36px 32px 18px 32px;
  margin-bottom: 0;
}
.tier-overview-title {
  font-family: 'Oswald', Arial, sans-serif;
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 18px;
}
.tier-overview-desc {
  font-size: 1.1rem;
  margin-bottom: 18px;
}
.tier-benefits-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 32px;
}
.tier-benefits-table th, .tier-benefits-table td {
  padding: 16px 18px;
  border-bottom: 1px solid #eee;
  font-size: 1.1rem;
  text-align: left;
}
.tier-benefits-table th {
  color: #0921a7;
  font-family: 'Oswald', Arial, sans-serif;
  font-size: 1.1rem;
  letter-spacing: 1px;
}
.tier-benefits-table td:last-child {
  text-align: right;
}
.tier-findout-btn {
  background: #d0001a;
  color: #fff;
  border: none;
  border-radius: 25px;
  font-size: 1.1rem;
  font-weight: 600;
  padding: 14px 0;
  width: 220px;
  margin: 32px auto 0 auto;
  display: block;
  transition: background 0.2s;
}
.tier-findout-btn:hover {
  background: #a00000;
}
</style>
<link href="https://fonts.googleapis.com/css?family=Oswald:700&display=swap" rel="stylesheet">
<div class="tier-banner" style="background:<%= t.bg %>"><%= t.name %></div>
<div class="tier-overview">
  <div class="tier-overview-title"><%= t.name %> MEMBERSHIP OVERVIEW</div>
  <div class="tier-overview-desc"><%= t.overview %></div>
  <div style="margin-bottom:18px;">
    <b>Discount rate:</b> <%= t.discount %> on football gear, restaurant, and season tickets.<br>
    <b>Cashback rate:</b> <%= t.cashback %> on football gear, restaurant, and season tickets.
  </div>
  <table class="tier-benefits-table">
    <tr>
      <th style="background:<%= t.color %>;">MEMBERSHIP BENEFITS</th>
      <th style="background:<%= t.color %>;"> </th>
    </tr>
    <tr>
      <td>Club Experiences</td>
      <td><img src="/images/placeholder-logo.png" alt="icon" style="height:28px;"></td>     
    </tr>
    <tr>
      <td>Ticket Access</td>
      <td><img src="/images/placeholder-logo.png" alt="icon" style="height:28px;"></td>
    </tr>
    <tr>
      <td><%= t.discount %> off retail online &amp; in-store</td>
      <td><img src="/images/placeholder-logo.png" alt="icon" style="height:28px;"></td>
    </tr>
    <tr>
      <td>Ticket Exchange</td>
      <td><img src="/images/placeholder-logo.png" alt="icon" style="height:28px;"></td>
    </tr>
    <tr>
      <td><%= t.cashback %> cashback on all eligible purchases</td>
      <td><img src="/images/placeholder-logo.png" alt="icon" style="height:28px;"></td>
    </tr>
  </table>
  <button class="tier-findout-btn" onclick="window.location.href='/users/membership/registration'"  >REGISTER NOW!</button> <!-- Membership registration -->
</div> 