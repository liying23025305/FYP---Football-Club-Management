<script>
function showCalendarTab(tab) {
  document.getElementById('calendar-fixtures-tab').style.display = (tab === 'fixtures') ? 'block' : 'none';
  document.getElementById('calendar-agm-tab').style.display = (tab === 'agm') ? 'block' : 'none';
  document.getElementById('calendar-trials-tab').style.display = (tab === 'trials') ? 'block' : 'none';
  document.getElementById('calendar-training-tab').style.display = (tab === 'training') ? 'block' : 'none';
  document.getElementById('tab-fixtures').classList.toggle('active', tab === 'fixtures');
  document.getElementById('tab-agm').classList.toggle('active', tab === 'agm');
  document.getElementById('tab-trials').classList.toggle('active', tab === 'trials');
  document.getElementById('tab-training').classList.toggle('active', tab === 'training');
}
function filterFixtures() {
  var comp = document.getElementById('calendarCompetitionFilter').value;
  var club = document.getElementById('calendarClubFilter').value;
  var rows = document.querySelectorAll('.calendar-match-row');
  rows.forEach(row => {
    var matchComp = row.getAttribute('data-competition');
    var home = row.getAttribute('data-home');
    var away = row.getAttribute('data-away');
    var show = true;
    if(comp !== 'ALL' && matchComp !== comp) show = false;
    if(club !== 'ALL' && club !== home && club !== away) show = false;
    row.style.display = show ? '' : 'none';
  });
}
function resetCalendarFilters() {
  document.getElementById('calendarCompetitionFilter').value = 'ALL';
  document.getElementById('calendarClubFilter').value = 'ALL';
  filterFixtures();
}
