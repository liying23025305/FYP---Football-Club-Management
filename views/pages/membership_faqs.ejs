%>
<style>
.faq-header {
  font-family: 'Oswald', Arial, sans-serif;
  font-size: 2.5rem;
  font-weight: 900;
  color: #d0001a;
  margin: 32px 0 18px 0;
  letter-spacing: 2px;
}
.faq-nav {
  display: flex;
  gap: 32px;
  border-bottom: 2px solid #eee;
  margin-bottom: 32px;
  font-family: 'Oswald', Arial, sans-serif;
  font-size: 1.1rem;
  font-weight: 700;
  text-transform: uppercase;
}
.faq-nav a {
  color: #d0001a;
  text-decoration: none;
  padding: 12px 0;
  border-bottom: 3px solid transparent;
  transition: border 0.2s;
}
.faq-nav a.active, .faq-nav a:hover {
  border-bottom: 3px solid #d0001a;
}
.faq-section {
  margin-bottom: 32px;
}
.faq-q {
  background: #f3f3f3;
  font-weight: 700;
  padding: 18px 24px;
  margin-bottom: 0;
  cursor: pointer;
  border: none;
  width: 100%;
  text-align: left;
  font-size: 1.1rem;
  border-radius: 4px 4px 0 0;
  outline: none;
}
.faq-a {
  background: #fff;
  padding: 18px 24px;
  border-radius: 0 0 4px 4px;
  border-top: 1px solid #eee;
  margin-bottom: 18px;
  font-size: 1rem;
}
</style>
<link href="https://fonts.googleapis.com/css?family=Oswald:700&display=swap" rel="stylesheet">
<div class="container">
  <div class="faq-header">FAQ</div>
  <div class="faq-nav">
    <% sections.forEach(s => { %>
      <a href="/users/membership/faqs?section=<%= s.key %>" class="<%= section === s.key ? 'active' : '' %>"><%= s.label %></a>
    <% }) %>
  </div>
  <div class="faq-section">
    <% currentFaqs.forEach((item, i) => { %>
      <button class="faq-q" onclick="toggleFaq(this)"><%= item.q %></button>
      <div class="faq-a" style="display:none;"><%- item.a %></div>
    <% }) %>
  </div>
</div>
<script>
function toggleFaq(btn) {
  var answer = btn.nextElementSibling;
  if (answer.style.display === 'none') {
    answer.style.display = 'block';
    btn.style.background = '#e0e0e0';
  } else {
    answer.style.display = 'none';
    btn.style.background = '';
  }
}
</script> 