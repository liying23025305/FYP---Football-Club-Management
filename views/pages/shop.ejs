<script>
function sortProducts(tab) {
  let container, cards, select;
  if(tab === 'fashion') {
    container = document.getElementById('fashion-products');
    select = document.getElementById('orderBy');
  } else if(tab === 'footwear') {
    container = document.getElementById('footwear-products');
    select = document.getElementById('orderByFootwear');
  } else if(tab === 'accessories') {
    container = document.getElementById('accessories-products');
    select = document.getElementById('orderByAccessories');
  }
  cards = Array.from(container.children);
  let order = select.value;
  if(order === 'low') {
    cards.sort((a,b) => parseFloat(a.getAttribute('data-price')) - parseFloat(b.getAttribute('data-price')));
  } else if(order === 'high') {
    cards.sort((a,b) => parseFloat(b.getAttribute('data-price')) - parseFloat(a.getAttribute('data-price')));
  } // else keep original order (do nothing)
  cards.forEach(card => container.appendChild(card));
}
document.getElementById('orderBy').onchange = function() { sortProducts('fashion'); };
document.getElementById('orderByFootwear').onchange = function() { sortProducts('footwear'); };
document.getElementById('orderByAccessories').onchange = function() { sortProducts('accessories'); };
</script> 