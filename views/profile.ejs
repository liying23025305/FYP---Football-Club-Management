<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Football Club</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <link rel="stylesheet" href="/stylesheet/profile.css" />
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-2">
                        <i class="fas fa-user-circle me-2"></i>Welcome, <%= user.first_name %> <%= user.surname %>!
                    </h1>
                    <p class="mb-0"><i class="fas fa-envelope me-2"></i><%= user.email %></p>
                    <p class="mb-0"><i class="fas fa-at me-2"></i><%= user.username %></p>
                </div>
                <div class="col-md-4 text-md-end">
                    <p class="mb-1"><strong>Member Since:</strong></p>
                    <p class="mb-0"><%= new Date(user.created_at).toLocaleDateString() %></p>
                </div>
            </div>
        </div>

        <!-- Success/Error Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Profile updated successfully!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="row">
            <!-- Membership Information -->
            <% if (membership) { %>
                <div class="col-12 mb-4">
                    <div class="membership-info <%= membership.status === 'active' && membership.days_remaining <= 7 ? 'expiring-soon' : '' %>">
                        <h4><i class="fas fa-crown me-2"></i>Your Membership</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Tier:</strong> <%= membership.tier_name %></p>
                                <p class="mb-1"><strong>Status:</strong> 
                                    <span class="badge <%= membership.status === 'active' ? 'bg-success' : 'bg-warning' %>">
                                        <%= membership.status.charAt(0).toUpperCase() + membership.status.slice(1) %>
                                    </span>
                                </p>
                                <p class="mb-1"><strong>Expires:</strong> <%= new Date(membership.expiry_date).toLocaleDateString() %></p>
                                <% if (membership.status === 'active' && membership.days_remaining <= 7) { %>
                                    <p class="mb-0 fw-bold text-danger">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        Expires in <%= membership.days_remaining %> day(s)!
                                    </p>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Discount:</strong> <%= membership.discount_percentage %>%</p>
                                <p class="mb-1"><strong>Cashback Rate:</strong> <%= membership.cashback_rate %>%</p>
                                <p class="mb-1"><strong>Cashback Earned:</strong> $<%= membership.cashback_accumulated ? parseFloat(membership.cashback_accumulated).toFixed(2) : '0.00' %></p>
                                <% if (membership.status === 'active' && membership.days_remaining <= 7) { %>
                                    <a href="/membership" class="btn btn-warning btn-sm mt-2">
                                        <i class="fas fa-redo me-1"></i>Renew Now
                                    </a>
                                <% } else if (membership.status === 'expired') { %>
                                    <a href="/membership" class="btn btn-primary btn-sm mt-2">
                                        <i class="fas fa-redo me-1"></i>Renew Membership
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="col-12 mb-4">
                    <div class="alert alert-info" role="alert">
                        <h5><i class="fas fa-info-circle me-2"></i>No Active Membership</h5>
                        <p class="mb-2">You don't have an active membership yet. Join our membership program to enjoy exclusive benefits!</p>
                        <a href="/membership" class="btn btn-primary">
                            <i class="fas fa-crown me-1"></i>Explore Memberships
                        </a>
                    </div>
                </div>
            <% } %>

            <!-- Profile Update Form -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Update Profile</h5>
                    </div>
                    <div class="card-body">
                        <form action="/profile/update" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="first_name" class="form-label">First Name</label>
                                    <input type="text" class="form-control" id="first_name" name="first_name" 
                                           value="<%= user.first_name %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="surname" class="form-label">Surname</label>
                                    <input type="text" class="form-control" id="surname" name="surname" 
                                           value="<%= user.surname %>" required>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" 
                                       value="<%= user.email %>" required>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="phone" class="form-label">Phone</label>
                                    <input type="tel" class="form-control" id="phone" name="phone" 
                                           value="<%= user.phone || '' %>">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="country" class="form-label">Country</label>
                                    <input type="text" class="form-control" id="country" name="country" 
                                           value="<%= user.country %>" required>
                                </div>
                            </div>

                            <hr>
                            <h6>Change Password (Optional)</h6>
                            
                            <div class="mb-3">
                                <label for="current_password" class="form-label">Current Password</label>
                                <input type="password" class="form-control" id="current_password" name="current_password">
                                <div class="form-text">Only required if you want to change your password</div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="new_password" class="form-label">New Password</label>
                                    <input type="password" class="form-control" id="new_password" name="new_password">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="confirm_password" class="form-label">Confirm New Password</label>
                                    <input type="password" class="form-control" id="confirm_password" name="confirm_password">
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Update Profile
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Account Summary -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Account Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-12 mb-3">
                                <div class="border-bottom pb-2">
                                    <h6 class="text-muted mb-1">Account Status</h6>
                                    <span class="badge bg-success">Active</span>
                                </div>
                            </div>
                            <% if (membership) { %>
                                <div class="col-12 mb-3">
                                    <div class="border-bottom pb-2">
                                        <h6 class="text-muted mb-1">Membership</h6>
                                        <strong><%= membership.tier_name %></strong>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="border-bottom pb-2">
                                        <h6 class="text-muted mb-1">Total Cashback</h6>
                                        <strong>$<%= membership.cashback_accumulated ? parseFloat(membership.cashback_accumulated).toFixed(2) : '0.00' %></strong>
                                    </div>
                                </div>
                            <% } %>
                            <div class="col-12">
                                <div class="pb-2">
                                    <h6 class="text-muted mb-1">Member Since</h6>
                                    <strong><%= new Date(user.created_at).toLocaleDateString() %></strong>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <% if (!membership) { %>
                                <a href="/membership" class="btn btn-outline-primary w-100 mb-2">
                                    <i class="fas fa-crown me-1"></i>Get Membership
                                </a>
                            <% } %>
                            <a href="/store" class="btn btn-outline-success w-100">
                                <i class="fas fa-shopping-bag me-1"></i>Visit Store
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Order History Summary -->
                <div class="card mt-4 order-history-card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Recent Orders</h5>
                    </div>
                    <div class="card-body">
                        <% if (recentOrders && recentOrders.length > 0) { %>
                            <div class="mb-3">
                                <% recentOrders.forEach(order => { %>
                                    <div class="recent-order-item d-flex justify-content-between align-items-center border-bottom pb-2 mb-2">
                                        <div>
                                            <strong>Order #<%= order.order_id %></strong>
                                            <br>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                <%= new Date(order.order_date).toLocaleDateString('en-US', { 
                                                    month: 'short', 
                                                    day: 'numeric', 
                                                    year: 'numeric' 
                                                }) %> • 
                                                <%= order.total_items || 0 %> item(s)
                                            </small>
                                            <br>
                                            <small class="text-success">
                                                <i class="fas fa-dollar-sign me-1"></i>
                                                $<%= parseFloat(order.final_amount || order.calculated_total || 0).toFixed(2) %>
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-<%= 
                                                order.status === 'confirmed' ? 'success' : 
                                                order.status === 'pending' ? 'warning' : 
                                                order.status === 'shipped' ? 'info' : 
                                                order.status === 'delivered' ? 'primary' : 'secondary' 
                                            %>">
                                                <%= order.status ? order.status.charAt(0).toUpperCase() + order.status.slice(1) : 'Unknown' %>
                                            </span>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                            <a href="/profile/order-history" class="btn btn-outline-primary w-100">
                                <i class="fas fa-history me-1"></i>View All Orders
                            </a>
                        <% } else { %>
                            <div class="text-center py-3">
                                <i class="fas fa-shopping-cart text-muted mb-2" style="font-size: 2rem;"></i>
                                <p class="text-muted mb-2">No orders found</p>
                                <small class="text-muted d-block mb-3">
                                    Start shopping to see your order history here!
                                </small>
                                <a href="/store" class="btn btn-primary">
                                    <i class="fas fa-shopping-bag me-1"></i>Start Shopping
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>