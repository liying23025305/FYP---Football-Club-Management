<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - Football Club</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container my-5">
        <h1 class="mb-4">
            <i class="fas fa-shopping-cart me-2"></i>Shopping Cart
        </h1>
        
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (reservedTickets && reservedTickets.length > 0) { %>
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Reserved Tickets</h5>
                        </div>
                        <div class="card-body">
                            <% reservedTickets.forEach(function(ticket) { %>
                                <div class="border rounded p-3 mb-3" id="ticket-<%= ticket.purchase_id %>">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <h6 class="mb-1"><%= ticket.event_name %></h6>
                                            <p class="text-muted mb-1">
                                                <i class="fas fa-calendar me-1"></i>
                                                <%= new Date(ticket.event_date).toLocaleDateString() %>
                                                <% if (ticket.event_time) { %>
                                                    at <%= ticket.event_time %>
                                                <% } %>
                                            </p>
                                            <p class="text-muted mb-0">
                                                <i class="fas fa-users me-1"></i>
                                                Quantity: <%= ticket.quantity %>
                                            </p>
                                        </div>
                                        <div class="col-md-3">
                                            <p class="mb-1">$<%= parseFloat(ticket.unit_price).toFixed(2) %> each</p>
                                            <p class="fw-bold mb-0">Total: $<%= parseFloat(ticket.final_price).toFixed(2) %></p>
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <div class="timer-display mb-2" data-expires="<%= ticket.reservation_expires_at %>">
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-clock me-1"></i>
                                                    <span class="countdown">--:--</span>
                                                </span>
                                            </div>
                                            <form action="/cart/remove/<%= ticket.purchase_id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card sticky-top">
                        <div class="card-header">
                            <h5 class="mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <% 
                                let subtotal = 0;
                                reservedTickets.forEach(function(ticket) {
                                    subtotal += parseFloat(ticket.final_price);
                                });
                            %>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span>$<%= subtotal.toFixed(2) %></span>
                            </div>
                            
                            <% if (user && membership && membership.status === 'active' && membership.discount_percentage > 0) { %>
                                <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>Membership Discount (<%= membership.discount_percentage %>%):</span>
                                    <span>-$<%= (subtotal * membership.discount_percentage / 100).toFixed(2) %></span>
                                </div>
                                <% subtotal = subtotal * (1 - membership.discount_percentage / 100); %>
                            <% } %>
                            
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <span class="fw-bold">Total:</span>
                                <span class="fw-bold">$<%= subtotal.toFixed(2) %></span>
                            </div>
                            
                            <a href="/checkout" class="btn btn-success w-100">
                                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h3 class="text-muted">Your cart is empty</h3>
                <p class="text-muted">Browse our events to find tickets!</p>
                <a href="/events" class="btn btn-primary">
                    <i class="fas fa-calendar-alt me-2"></i>View Events
                </a>
            </div>
        <% } %>
    </div>
    
    <%- include('partials/footer') %>
    

    <script>
        // Timer countdown functionality
        function updateCountdowns() {
            const timers = document.querySelectorAll('.timer-display');
            
            timers.forEach(timer => {
                const expiresAt = new Date(timer.dataset.expires);
                const now = new Date();
                const timeLeft = expiresAt - now;
                
                if (timeLeft <= 0) {
                    timer.querySelector('.countdown').textContent = 'EXPIRED';
                    timer.querySelector('.badge').className = 'badge bg-danger';
                    // Auto-refresh page to remove expired items
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const minutes = Math.floor(timeLeft / 60000);
                    const seconds = Math.floor((timeLeft % 60000) / 1000);
                    timer.querySelector('.countdown').textContent = 
                        `${minutes}:${seconds.toString().padStart(2, '0')}`;
                }
            });
        }
        
        // Update every second
        setInterval(updateCountdowns, 1000);
        updateCountdowns(); // Initial call
    </script>
</body>
</html>