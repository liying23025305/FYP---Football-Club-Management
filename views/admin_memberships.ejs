<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Memberships - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
         <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1><i class="fas fa-id-card me-2"></i>Manage User Memberships</h1>

                <!-- Success/Error Messages -->
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <% if (success === 'status_updated') { %>
                            Membership status updated successfully!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <% if (error === 'status_update_failed') { %>
                            Failed to update membership status. Please try again.
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Filters -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label for="status" class="form-label">Filter by Status:</label>
                            </div>
                            <div class="col-auto">
                                <select name="status" id="status" class="form-select" onchange="this.form.submit()">
                                    <option value="all" <%= currentStatus === 'all' ? 'selected' : '' %>>All</option>
                                    <option value="active" <%= currentStatus === 'active' ? 'selected' : '' %>>Active</option>
                                    <option value="expired" <%= currentStatus === 'expired' ? 'selected' : '' %>>Expired</option>
                                    <option value="cancelled" <%= currentStatus === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                    <option value="pending" <%= currentStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Memberships Table -->
                <div class="card">
                    <div class="card-body">
                        <% if (memberships && memberships.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Tier</th>
                                            <th>Status</th>
                                            <th>Join Date</th>
                                            <th>Expiry Date</th>
                                            <th>Days Remaining</th>
                                            <th>Cashback</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% memberships.forEach(function(membership) { %>
                                            <tr>
                                                <td>
                                                    <strong><%= membership.first_name %> <%= membership.surname %></strong>
                                                    <br><small class="text-muted">@<%= membership.username %></small>
                                                    <br><small class="text-muted"><%= membership.email %></small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary"><%= membership.tier_name %></span>
                                                    <br><small class="text-muted">$<%= parseFloat(membership.price).toFixed(2) %></small>
                                                </td>
                                                <td>
                                                    <% if (membership.status === 'active') { %>
                                                        <span class="badge bg-success">Active</span>
                                                    <% } else if (membership.status === 'expired') { %>
                                                        <span class="badge bg-warning">Expired</span>
                                                    <% } else if (membership.status === 'cancelled') { %>
                                                        <span class="badge bg-danger">Cancelled</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary"><%= membership.status %></span>
                                                    <% } %>
                                                </td>
                                                <td><%= new Date(membership.join_date).toLocaleDateString() %></td>
                                                <td><%= new Date(membership.expiry_date).toLocaleDateString() %></td>
                                                <td>
                                                    <% if (membership.status === 'active') { %>
                                                        <% if (membership.days_remaining > 0) { %>
                                                            <span class="text-success"><%= membership.days_remaining %> days</span>
                                                        <% } else { %>
                                                            <span class="text-danger">Expired</span>
                                                        <% } %>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>$<%= parseFloat(membership.cashback_accumulated).toFixed(2) %></td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" 
                                                                type="button" data-bs-toggle="dropdown">
                                                            Actions
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <form action="/admin/memberships/<%= membership.membership_id %>/update-status" 
                                                                      method="POST" class="d-inline">
                                                                    <input type="hidden" name="status" value="active">
                                                                    <button type="submit" class="dropdown-item" 
                                                                            <%= membership.status === 'active' ? 'disabled' : '' %>>
                                                                        <i class="fas fa-play me-2"></i>Set Active
                                                                    </button>
                                                                </form>
                                                            </li>
                                                            <li>
                                                                <form action="/admin/memberships/<%= membership.membership_id %>/update-status" 
                                                                      method="POST" class="d-inline">
                                                                    <input type="hidden" name="status" value="expired">
                                                                    <button type="submit" class="dropdown-item"
                                                                            <%= membership.status === 'expired' ? 'disabled' : '' %>>
                                                                        <i class="fas fa-clock me-2"></i>Set Expired
                                                                    </button>
                                                                </form>
                                                            </li>
                                                            <li>
                                                                <form action="/admin/memberships/<%= membership.membership_id %>/update-status" 
                                                                      method="POST" class="d-inline">
                                                                    <input type="hidden" name="status" value="cancelled">
                                                                    <button type="submit" class="dropdown-item"
                                                                            <%= membership.status === 'cancelled' ? 'disabled' : '' %>
                                                                            onclick="return confirm('Are you sure you want to cancel this membership?')">
                                                                        <i class="fas fa-ban me-2"></i>Cancel
                                                                    </button>
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <% if (totalPages > 1) { %>
                                <nav aria-label="Memberships pagination" class="mt-4">
                                    <ul class="pagination justify-content-center">
                                        <% if (currentPage > 1) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= currentPage - 1 %>&status=<%= currentStatus %>">Previous</a>
                                            </li>
                                        <% } %>

                                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>&status=<%= currentStatus %>"><%= i %></a>
                                            </li>
                                        <% } %>

                                        <% if (currentPage < totalPages) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= currentPage + 1 %>&status=<%= currentStatus %>">Next</a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-id-card fa-3x text-muted mb-3"></i>
                                <h5>No memberships found</h5>
                                <p class="text-muted">
                                    <% if (currentStatus === 'all') { %>
                                        No user memberships exist yet.
                                    <% } else { %>
                                        No memberships with status "<%= currentStatus %>" found.
                                    <% } %>
                                </p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>