<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order More Gear</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <h2>Order More Gear</h2>
        <form action="/admin/gear/order" method="POST" class="mt-3">
            <div class="mb-3">
                <label for="gear_id" class="form-label">Select Gear</label>
                <select class="form-select" id="gear_id" name="gear_id" required>
                    <% gear.forEach(item => { %>
                        <option value="<%= item.gear_id %>" <%= selectedGearId == item.gear_id ? 'selected' : '' %>><%= item.gear_name %> (Current: <%= item.gear_quantity %>)</option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity</label>
                <select class="form-select" id="quantity" name="quantity" required>
                    <% for(let i=10; i<=100; i+=10) { %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>
            </div>
            <div class="mb-3">
                <small class="text-muted">Stock will deliver in <%= deliveryDate %></small>
            </div>
            <button type="submit" class="btn btn-primary">Confirm Order</button>
            <a href="/admin/gear" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
    <%- include('partials/footer') %>
</body>
</html>
