<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Gear - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body>
    <%- include('partials/navbar') %>
    <h1>Manage Gear</h1>

    <% if (typeof success !== 'undefined' && success === 'ordered') { %>
      <div class="alert alert-success">Stock order placed successfully! Supplier has been notified.</div>
    <% } %>

    <% const lowStockItems = gear.filter(item => item.gear_quantity < 10); %>
    <% if (lowStockItems.length > 0) { %>
      <div class="alert alert-warning d-flex align-items-center justify-content-between">
        <span><strong>Stock low!</strong> Some items are running low. <a href="/admin/gear/order" class="btn btn-sm btn-primary ms-2">Order more?</a></span>
      </div>
    <% } %>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Price</th>
          <th>Status</th>
          <th>Stock</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% gear.forEach(item => { %>
          <tr>
            <td><%= item.gear_name %></td>
            <td><%= item.category %></td>
            <td>$<%= item.price_per_unit %></td>
            <td><%= item.status %></td>
            <td><%= item.gear_quantity %></td>
            <td>
              <% if (item.gear_quantity < 10) { %>
                <span style="color:red;">Low stock! (<%= item.gear_name %>), </span>
                <a href="/admin/gear/order?gear_id=<%= item.gear_id %>" style="text-decoration:underline;">order more?</a>
              <% } else { %>
                <a href="/admin/gear/order?gear_id=<%= item.gear_id %>" style="text-decoration:underline;">Order more</a>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <%- include('partials/footer') %>
</body>
</html>