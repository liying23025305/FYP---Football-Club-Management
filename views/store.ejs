<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Store</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel ="stylesheet" href="/stylesheet/style.css" />
  <link rel="stylesheet" href="/stylesheet/store.css" />
  <style>
    .filter-bar {
      overflow-x: auto;
      white-space: nowrap;
      margin-bottom: 1rem;
    }
    .filter-chip {
      display: inline-block;
      padding: 0.5rem 1.2rem;
      margin-right: 0.5rem;
      border-radius: 20px;
      background: #f2f2f2;
      border: 1px solid #ddd;
      cursor: pointer;
      font-weight: 500;
    }
    .filter-chip.active {
      background: #e0e0e0;
      border-color: #007bff;
      color: #007bff;
    }
    .sidebar {
      min-width: 220px;
      max-width: 260px;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      padding: 1.5rem 1rem;
      margin-bottom: 2rem;
    }
    .product-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem 1.5rem;
    }
    .product-card {
      min-width: 220px;
      max-width: 260px;
      margin: 0 auto;
    }
    .sort-dropdown {
      min-width: 150px;
    }
    @media (max-width: 991px) {
      .sidebar { max-width: 100%; min-width: 100%; margin-bottom: 1rem; }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container-fluid mt-4">
    <div class="row">
      <!-- Sidebar Filters -->
      <div class="col-lg-2 mb-4">
        <div class="sidebar">
          <form action="/store" method="GET" id="sidebarFilterForm">
            <div class="mb-3">
              <label for="size" class="form-label">size</label>
              <select id="size" name="size" class="form-select">
                <option value="All" <%= selectedSize === 'All' ? 'selected' : '' %>>All size</option>
                <option value="6" <%= selectedSize === '6' ? 'selected' : '' %>>6</option>
                <option value="7" <%= selectedSize === '7' ? 'selected' : '' %>>7</option>
                <option value="8" <%= selectedSize === '8' ? 'selected' : '' %>>8</option>
                <option value="9" <%= selectedSize === '9' ? 'selected' : '' %>>9</option>
                <option value="10" <%= selectedSize === '10' ? 'selected' : '' %>>10</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="sizeKids" class="form-label">Size (Kids)</label>
              <select id="sizeKids" name="sizeKids" class="form-select">
                <option value="All" <%= selectedSizeKids === 'All' ? 'selected' : '' %>>All Size (Kids)</option>
                <option value="1" <%= selectedSizeKids === '1' ? 'selected' : '' %>>1</option>
                <option value="2" <%= selectedSizeKids === '2' ? 'selected' : '' %>>2</option>
                <option value="3" <%= selectedSizeKids === '3' ? 'selected' : '' %>>3</option>
                <option value="4" <%= selectedSizeKids === '4' ? 'selected' : '' %>>4</option>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Price Range</label>
              <div class="d-flex align-items-center gap-2">
                <span>S$ <span id="priceMin">15.00</span></span>
                <input type="range" class="form-range flex-grow-1" min="15" max="300" step="1" id="priceRange" name="priceRange" value="<%= priceRange || 300 %>" oninput="document.getElementById('priceRangeValue').textContent = this.value"/>
                <span>S$ <span id="priceRangeValue"><%= priceRange || 300 %></span></span>
              </div>
            </div>
            <input type="hidden" name="category" value="<%= selectedCategory %>">
            <input type="hidden" name="search" value="<%= searchQuery || '' %>">
            <input type="hidden" name="sortBy" value="<%= sortBy || 'featured' %>">
            <button type="submit" class="btn btn-outline-primary w-100">Apply</button>
          </form>
        </div>
      </div>
      <!-- Main Content -->
      <div class="col-lg-10">
        <!-- Filter Chips Bar -->
        <div class="filter-bar mb-3">
          <form action="/store" method="GET" id="categoryChipsForm" class="d-inline">
            <input type="hidden" name="search" value="<%= searchQuery || '' %>">
            <input type="hidden" name="priceRange" value="<%= priceRange %>">
            <input type="hidden" name="size" value="<%= selectedSize %>">
            <input type="hidden" name="sizeKids" value="<%= selectedSizeKids %>">
            <input type="hidden" name="sortBy" value="<%= sortBy || 'featured' %>">
            <% ['All', ...categories].forEach(cat => { %>
              <button type="submit" name="category" value="<%= cat %>" class="filter-chip<%= selectedCategory === cat ? ' active' : '' %>"><%= cat %></button>
            <% }) %>
            <a href="/store/hospitality" class="filter-chip btn btn-link p-0 ms-2" style="text-decoration:none;vertical-align:middle;">Hospitality Packages</a>
          </form>
        </div>
        <!-- Search and Sort Row -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
          <form action="/store" method="GET" id="searchSortForm" class="flex-grow-1 me-2 d-flex align-items-center">
            <input type="search" name="search" placeholder="Search..." class="form-control me-2" value="<%= searchQuery || '' %>"/>
            <input type="hidden" name="category" value="<%= selectedCategory %>">
            <input type="hidden" name="priceRange" value="<%= priceRange %>">
            <input type="hidden" name="size" value="<%= selectedSize %>">
            <input type="hidden" name="sizeKids" value="<%= selectedSizeKids %>">
            <label for="sortBy" class="me-2">Sort By:</label>
            <select id="sortBy" name="sortBy" class="form-select sort-dropdown d-inline-block w-auto" onchange="document.getElementById('searchSortForm').submit()">
              <option value="featured" <%= sortBy === 'featured' ? 'selected' : '' %>>Featured</option>
              <option value="priceLow" <%= sortBy === 'priceLow' ? 'selected' : '' %>>Price: Low to High</option>
              <option value="priceHigh" <%= sortBy === 'priceHigh' ? 'selected' : '' %>>Price: High to Low</option>
              <option value="name" <%= sortBy === 'name' ? 'selected' : '' %>>Name</option>
            </select>
          </form>
        </div>
        <!-- Product Grid -->
        <% if (products && products.length) { %>
        <div class="product-grid">
          <% products.forEach(product => { %>
            <div class="card product-card">
              <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.name %>"/>
              <div class="card-body text-center d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text">S$ <%= product.price %>.00</p>
                <button class="btn btn-success w-100 mt-2" 
                  data-bs-toggle="modal" 
                  data-bs-target="#addToCartModal" 
                  data-product-id="<%= product.id %>" 
                  data-product-name="<%= product.name %>" 
                  data-product-image="<%= product.image %>" 
                  data-product-price="<%= product.price %>">
                  Add to Cart
                </button>
              </div>
            </div>
          <% }) %>
        </div>
        <!-- Add to Cart Modal (only one, outside the loop) -->
        <div class="modal fade" id="addToCartModal" tabindex="-1" aria-labelledby="addToCartModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="addToCartModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body d-flex flex-wrap">
                <div class="col-md-6 text-center mb-3 mb-md-0">
                  <img id="modalProductImage" src="" alt="Product" class="img-fluid" style="max-height:300px;"/>
                </div>
                <div class="col-md-6">
                  <form id="addToCartForm" action="/cart/add/" method="POST">
                    <input type="hidden" name="productId" id="modalProductId" value=""/>
                    <p class="h4 mb-2" id="modalProductName"></p>
                    <p class="h5 text-danger mb-3">S$ <span id="modalProductPrice"></span></p>
                    <div class="mb-3">
                      <label for="modalSize" class="form-label">Size</label>
                      <select name="size" id="modalSize" class="form-select">
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                      </select>
                    </div>
                    <div class="mb-3 d-flex align-items-center">
                      <label class="me-2">Quantity</label>
                      <button type="button" class="btn btn-outline-secondary btn-sm" id="modalQtyMinus">-</button>
                      <input type="number" name="quantity" id="modalQuantity" class="form-control mx-2" value="1" min="1" style="width:60px;"/>
                      <button type="button" class="btn btn-outline-secondary btn-sm" id="modalQtyPlus">+</button>
                    </div>
                    <button type="submit" class="btn btn-danger w-100">Add to cart</button>
                    <div id="addToCartSuccess" class="alert alert-success mt-3 d-none" role="alert">
                      Added to cart!
                    </div>
                  </form>
                  <div class="mt-3">
                    <a href="#" class="text-decoration-underline">Terms and Conditions</a><br>
                    <small>30-day money-back guarantee<br>Shipping: 2-3 Business Days</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Bootstrap JS (required for modal) -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
        <script>
          var addToCartModal = document.getElementById('addToCartModal');
          if (addToCartModal) {
            addToCartModal.addEventListener('show.bs.modal', function (event) {
              var button = event.relatedTarget;
              var productId = button.getAttribute('data-product-id');
              var productName = button.getAttribute('data-product-name');
              var productImage = button.getAttribute('data-product-image');
              var productPrice = button.getAttribute('data-product-price');
              document.getElementById('addToCartModalLabel').textContent = productName;
              document.getElementById('modalProductName').textContent = productName;
              document.getElementById('modalProductImage').src = '/images/' + productImage;
              document.getElementById('modalProductPrice').textContent = productPrice;
              document.getElementById('modalProductId').value = productId;
              document.getElementById('addToCartForm').action = '/cart/add/' + productId;
              document.getElementById('modalQuantity').value = 1;
              document.getElementById('addToCartSuccess').classList.add('d-none');
            });
            document.getElementById('modalQtyMinus').onclick = function() {
              var qty = document.getElementById('modalQuantity');
              if (parseInt(qty.value) > 1) qty.value = parseInt(qty.value) - 1;
            };
            document.getElementById('modalQtyPlus').onclick = function() {
              var qty = document.getElementById('modalQuantity');
              qty.value = parseInt(qty.value) + 1;
            };
            // AJAX Add to Cart
            document.getElementById('addToCartForm').onsubmit = async function(e) {
              e.preventDefault();
              var form = e.target;
              var data = new URLSearchParams(new FormData(form));
              var action = form.action;
              const response = await fetch(action, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: data
              });
              if (response.ok) {
                document.getElementById('addToCartSuccess').classList.remove('d-none');
                // Update cart summary via AJAX
                fetch('/cart/summary').then(res => res.json()).then(cart => {
                  var list = document.getElementById('cartSummaryList');
                  var emptyMsg = document.getElementById('cartSummaryEmpty');
                  if (cart && cart.length && list) {
                    list.innerHTML = cart.map(item =>
                      `<li class='list-group-item d-flex justify-content-between align-items-center'>`
                      + `<span>${item.name}${item.size ? ` <span class='badge bg-secondary ms-2'>Size: ${item.size}</span>` : ''}</span>`
                      + `<span class='badge bg-primary rounded-pill'>x ${item.quantity}</span>`
                      + `</li>`
                    ).join('');
                    if (emptyMsg) emptyMsg.style.display = 'none';
                  } else if (emptyMsg) {
                    emptyMsg.style.display = '';
                  }
                });
              } else {
                alert('Failed to add to cart.');
              }
            };
          }
        </script>
        <% } else { %>
          <p class="text-center">No products found.</p>
        <% } %>
      </div>
    </div>
    <!-- Mini Cart Floating Button -->
    <div id="miniCartBtn" style="position:fixed;bottom:32px;right:32px;z-index:1050;">
      <button class="btn btn-success shadow-lg d-flex align-items-center" style="border-radius:50px;padding:0.75rem 1.5rem;font-size:1.2rem;" onclick="window.location.href='/cart'">
        <span class="me-2">🛒</span>
        <span id="miniCartCount"><%= cart && cart.length ? cart.reduce((sum, i) => sum + (i.quantity || 1), 0) : 0 %></span>
        <span class="ms-2 d-none d-md-inline">View Cart</span>
      </button>
      <div id="miniCartPreview" class="card mt-2 shadow-sm" style="display:none;min-width:260px;">
        <div class="card-body p-2">
          <h6 class="mb-2">Recently Added</h6>
          <ul class="list-group list-group-flush" id="miniCartList">
            <% if (cart && cart.length) { %>
              <% cart.slice(-3).reverse().forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span><%= item.name || item.gear_name %><% if (item.size) { %> <span class="badge bg-secondary ms-2">Size: <%= item.size %></span><% } %></span>
                  <span class="badge bg-primary rounded-pill">x <%= item.quantity %></span>
                </li>
              <% }) %>
            <% } else { %>
              <li class="list-group-item text-muted">Cart is empty.</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <script>
    // Mini cart hover preview
    const miniCartBtn = document.getElementById('miniCartBtn');
    const miniCartPreview = document.getElementById('miniCartPreview');
    if (miniCartBtn && miniCartPreview) {
      miniCartBtn.addEventListener('mouseenter', () => { miniCartPreview.style.display = 'block'; });
      miniCartBtn.addEventListener('mouseleave', () => { miniCartPreview.style.display = 'none'; });
    }
    // Update mini cart after AJAX add
    function updateMiniCart() {
      fetch('/cart/summary').then(res => res.json()).then(cart => {
        const miniCartList = document.getElementById('miniCartList');
        const miniCartCount = document.getElementById('miniCartCount');
        if (miniCartList && cart) {
          miniCartList.innerHTML = cart.slice(-3).reverse().map(item =>
            `<li class='list-group-item d-flex justify-content-between align-items-center'>`
            + `<span>${item.name}${item.size ? ` <span class='badge bg-secondary ms-2'>Size: ${item.size}</span>` : ''}</span>`
            + `<span class='badge bg-primary rounded-pill'>x ${item.quantity}</span>`
            + `</li>`
          ).join('') || `<li class='list-group-item text-muted'>Cart is empty.</li>`;
        }
        if (miniCartCount) {
          miniCartCount.textContent = cart.reduce((sum, i) => sum + (i.quantity || 1), 0);
        }
      });
    }
    // Patch AJAX add-to-cart to also update mini cart
    if (document.getElementById('addToCartForm')) {
      const origAddToCart = document.getElementById('addToCartForm').onsubmit;
      document.getElementById('addToCartForm').onsubmit = async function(e) {
        if (origAddToCart) await origAddToCart.call(this, e);
        updateMiniCart();
      };
    }
    // Set price range value on page load
    document.addEventListener('DOMContentLoaded', function() {
      var priceRange = document.getElementById('priceRange');
      var priceRangeValue = document.getElementById('priceRangeValue');
      if (priceRange && priceRangeValue) {
        priceRangeValue.textContent = priceRange.value;
        priceRange.addEventListener('input', function() {
          priceRangeValue.textContent = this.value;
        });
      }
    });
  </script>
  <%- include('partials/footer') %>
</body>
</html>