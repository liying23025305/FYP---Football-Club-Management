<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Store</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar') %>
  


  <main class="container mt-5">
    <h1 class="text-center">Store</h1>

    <!-- Store Items Section -->
    <div class="card">
  <% if (item.image_url) { %>
    <img src="<%= item.image_url %>" class="card-img-top" alt="<%= item.gear_name %>">
  <% } else { %>
    <img src="/images/default.png" class="card-img-top" alt="No image available">
  <% } %>
  <div class="card-body">
    <h5 class="card-title"><%= item.gear_name %></h5>
    <p class="card-text"><%= item.gear_desc %></p>
    <p class="card-text"><strong>Price:</strong> $<%= item.price_per_unit.toFixed(2) %></p>
    <form action="/cart/add/<%= item.gear_id %>" method="POST">
      <button type="submit" class="btn btn-primary">Add to Cart</button>
    </form>
  </div>
</div>

    <!-- Current Cart Section -->
    <h2 class="mt-5">Current Cart</h2>
    <% if (cart && cart.length > 0) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% cart.forEach(item => { %>
            <tr>
              <td><%= item.gear_name %></td>
              <td><%= item.quantity || 1 %></td>
              <td>$<%= (item.price_per_unit * (item.quantity || 1)).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="text-end">
        <a href="/cart" class="btn btn-success">View Cart</a>
      </div>
    <% } else { %>
      <p class="text-center">Your cart is currently empty.</p>
    <% } %>
  </main>
</body>
<%- include('partials/footer') %>
</html>