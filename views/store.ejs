<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Store</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar') %>
  
<main class="container mt-5">
  <h1 class="text-center">Store</h1>

  <div class="row justify-content-center">
    <% gear.forEach(function(item) { %>
      <div class="col-6 col-sm-4 col-md-3 mb-4">
        <div class="card">
          <% if (item.image_url) { %>
            <img src="<%= item.image_url %>" class="card-img-top" alt="<%= item.gear_name %>">
          <% } else { %>
            <img src="/images/jersey.png" class="card-img-top" alt="Jersey">
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= item.gear_name %></h5>
            <p class="card-text">Price: $<%= item.price %></p>
            <a href="#" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

  <!-- Current Cart Section -->
  <h2 class="mt-4">Current Cart</h2>
  <% if (cart && cart.length > 0) { %>
    <table class="table table-bordered">
      <!-- ... -->
    </table>
    <div class="text-end">
      <a href="/cart" class="btn btn-success">View Cart</a>
    </div>
  <% } else { %>
    <p class="text-center">Your cart is currently empty.</p>
  <% } %>
</main>
</body>
<%- include('partials/footer') %>
</html>