<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Football Club Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/stylesheet/style.css" />
  <link rel="stylesheet" href="/stylesheet/home.css" />
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <main class="container mt-4">
<!-- Hero Section -->
<section class="hero-section container d-flex align-items-center justify-content-between">
  <!-- Left: Text Box -->
  <div class="hero-text-box">
    <h1>WELCOME TO BLUELOCK CLUB</h1>
    <p class="lead">Join our community of passionate bluelock players and fans</p>
    <div class="mt-4">
      <a href="/register" class="btn btn-light me-2">Join Now</a>
      <a href="/login" class="btn btn-outline-light">Member Login</a>
    </div>
  </div>

  <!-- Right: Slideshow Box -->
  <div class="hero-slideshow-box">
    <div class="slideshow">
      <img src="/images/home1.png" class="slide active" alt="Slide 1">
      <img src="/images/home2.png" class="slide" alt="Slide 2">
      <img src="/images/home3.png" class="slide" alt="Slide 3">
    </div>
  </div>
</section>


    <!-- News Section -->
  <section class="section">
  <div class="section-title">News</div>

  <!-- Main News Card -->
<div class="main-news-card mb-3">
  <a href="/news">
    <img src="/images/home4.jpg" alt="Main News" class="img-fluid w-100" />
  </a>
</div>

<!-- Horizontal Mini Cards -->
<div class="d-flex justify-content-center gap-2 flex-wrap">
  <div class="news-thumbnail">
    <a href="/news">
      <img src="/images/news1.png" alt="News 1" />
    </a>
  </div>
  <div class="news-thumbnail">
    <a href="/news">
      <img src="/images/news2.png" alt="News 2" />
    </a>
  </div>
  <div class="news-thumbnail">
    <a href="/news">
      <img src="/images/news3.png" alt="News 3" />
    </a>
  </div>
  <div class="news-thumbnail">
    <a href="/news">
      <img src="/images/news4.png" alt="News 4" />
    </a>
  </div>
</div>


<!-- Shop Cards Section -->
<section class="section">
  <h2 class="section-title">Shop</h2>
  <div class="image-cards d-flex justify-content-center gap-4">
    <div class="image-card">
      <a href="/store">
        <img src="/images/jersey.png" alt="Card 1">
      </a>
    </div>
    <div class="image-card">
      <a href="/store">
        <img src="/images/shoes.png" alt="Card 2">
      </a>
    </div>
    <div class="image-card">
      <a href="/store">
        <img src="/images/socks.png" alt="Card 3">
      </a>
    </div>
  </div>
</section>

<!-- Matches Section -->
<section class="events-section">
  <h2 class="section-title">MATCHES</h2>

  <div class="match-scroll-container">
    <div class="match-scroll-wrapper">
      <!-- Previous Games -->
      <div class="match-card previous-game">
        <h4>PREVIOUS GAMES</h4>
        <a href="/matches" class="text-white">See all the results ></a>
      </div>

      <!-- Match 1 -->
      <div class="match-card">
        <div class="d-flex justify-content-between mb-2">
          <div class="score">4</div>
          <div><i class="fas fa-trophy text-warning"></i></div>
          <div class="score">3</div>
        </div>
        <h5>Bastard München vs Manshine City</h5>
        <p class="mb-1">Sunday, May 26, 18:00 JST</p>
        <p class="mb-1">NEO EGOIST LEAGUE, Kaiser Arena</p>
        <a href="#" class="btn btn-sm btn-outline-primary">Match Center</a>
      </div>

      <!-- Match 2 -->
      <div class="match-card">
        <div class="d-flex justify-content-between mb-2">
          <div class="score">2</div>
          <div><i class="fas fa-trophy text-warning"></i></div>
          <div class="score">2</div>
        </div>
        <h5>PXG vs Ubers</h5>
        <p class="mb-1">Wednesday, May 29, 20:00 JST</p>
        <p class="mb-1">NEO EGOIST LEAGUE, Paris Dome</p>
        <a href="#" class="btn btn-sm btn-outline-primary">Match Center</a>
      </div>

      <!-- Match 3 -->
      <div class="match-card">
        <div class="d-flex justify-content-between mb-2">
          <div class="score">1</div>
          <div><i class="fas fa-trophy text-warning"></i></div>
          <div class="score">3</div>
        </div>
        <h5>FC Barcha vs Bastard München</h5>
        <p class="mb-1">Saturday, June 1, 15:00 JST</p>
        <p class="mb-1">NEO EGOIST LEAGUE, Blue Arena</p>
        <a href="#" class="btn btn-sm btn-outline-primary">Match Center</a>
      </div>

      <!-- Match 4 -->
      <div class="match-card">
        <div class="d-flex justify-content-between mb-2">
          <div class="score">2</div>
          <div><i class="fas fa-trophy text-warning"></i></div>
          <div class="score">2</div>
        </div>
        <h5>Ubers vs Manshine City</h5>
        <p class="mb-1">Monday, June 3, 19:30 JST</p>
        <p class="mb-1">NEO EGOIST LEAGUE, Ubers Stadium</p>
        <a href="#" class="btn btn-sm btn-outline-primary">Match Center</a>
      </div>

      <!-- Next Game -->
      <div class="match-card next-game">
        <h4>NEXT GAME</h4>
        <a href="/matches" class="text-white">See all the results ></a>
      </div>
    </div>
  </div>
</section>



    <!-- Trending Section -->
<section class="trending-section mt-4">
  <h2>TRENDING</h2>
  <div class="trending-scroll-container">
    <div class="trending-scroll-wrapper">
      <div class="trending-item">
        <span class="trending-badge badge-live">LIVE</span>
        <div class="position-absolute bottom-0 p-2">
          <h6>Kaiser vs Isagi - NEL Showdown</h6>
        </div>
      </div>

      <div class="trending-item">
        <span class="trending-badge badge-live">LIVE</span>
        <div class="position-absolute bottom-0 p-2">
          <h6>Reo & Nagi’s Combo Play</h6>
        </div>
      </div>

      <div class="trending-item">
        <span class="trending-badge badge-new">NEW</span>
        <div class="position-absolute bottom-0 p-2">
          <h6>Bachira’s Dribbling Frenzy</h6>
        </div>
      </div>

      <div class="trending-item">
        <span class="trending-badge badge-new">NEW</span>
        <div class="position-absolute bottom-0 p-2">
          <h6>Shidou's Ruthless Finish</h6>
        </div>
      </div>

      <div class="trending-item">
        <span class="trending-badge badge-new">NEW</span>
        <div class="position-absolute bottom-0 p-2">
          <h6>Yoichi Isagi's Direct Shot</h6>
        </div>
      </div>

      <div class="trending-item">
        <span class="trending-badge badge-new">NEW</span>
        <div class="position-absolute bottom-0 p-2">
          <h6>Top 5 Egoist Moments</h6>
        </div>
      </div>

      <div class="trending-item">
        <span class="trending-badge badge-new">NEW</span>
        <div class="position-absolute bottom-0 p-2">
          <h6>NEL Highlights | Week 5</h6>
        </div>
      </div>

      <div class="trending-item">
        <span class="trending-badge badge-new">NEW</span>
        <div class="position-absolute bottom-0 p-2">
          <h6>Barou’s King Goal Compilation</h6>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/slideshow.js"></script>

<footer class="social-footer">
  <a href="#" class="fa-brands fa-facebook-f"></a>
  <a href="#" class="fa-brands fa-twitter"></a>
  <a href="#" class="fa-brands fa-instagram"></a>
  
</footer>
</body>
</html>

