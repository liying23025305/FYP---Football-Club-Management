<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Membership Tiers - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
         <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1><i class="fas fa-crown me-2"></i>Manage Membership Tiers</h1>
                    <a href="/admin/membership-tiers/create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Create New Tier
                    </a>
                </div>

                <!-- Success/Error Messages -->
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <% if (success === 'created') { %>
                            Membership tier created successfully!
                        <% } else if (success === 'updated') { %>
                            Membership tier updated successfully!
                        <% } else if (success === 'deleted') { %>
                            Membership tier deleted successfully!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <% if (error === 'delete_failed') { %>
                            Failed to delete membership tier. Please try again.
                        <% } else { %>
                            An error occurred. Please try again.
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Membership Tiers Table -->
                <div class="card">
                    <div class="card-body">
                        <% if (tiers && tiers.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Tier Name</th>
                                            <th>Price</th>
                                            <th>Duration</th>
                                            <th>Discount</th>
                                            <th>Cashback</th>
                                            <th>Members</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% tiers.forEach(function(tier) { %>
                                            <tr>
                                                <td>
                                                    <strong><%= tier.tier_name %></strong>
                                                    <% if (tier.tier_desc) { %>
                                                        <br><small class="text-muted"><%= tier.tier_desc %></small>
                                                    <% } %>
                                                </td>
                                                <td>$<%= parseFloat(tier.price).toFixed(2) %></td>
                                                <td><%= tier.duration_months %> month(s)</td>
                                                <td><%= tier.discount_percentage %>%</td>
                                                <td><%= tier.cashback_rate %>%</td>
                                                <td>
                                                    <span class="badge bg-primary"><%= tier.member_count %> total</span>
                                                    <br><span class="badge bg-success"><%= tier.active_members %> active</span>
                                                </td>
                                                <td>
                                                    <% if (tier.active) { %>
                                                        <span class="badge bg-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">Inactive</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/admin/membership-tiers/<%= tier.tier_id %>/edit" 
                                                           class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <% if (tier.member_count == 0) { %>
                                                            <form action="/admin/membership-tiers/<%= tier.tier_id %>/delete" 
                                                                  method="POST" class="d-inline"
                                                                  onsubmit="return confirm('Are you sure you want to delete this membership tier?')">
                                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        <% } else { %>
                                                            <button class="btn btn-sm btn-outline-secondary" disabled 
                                                                    title="Cannot delete tier with active members">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-crown fa-3x text-muted mb-3"></i>
                                <h5>No membership tiers found</h5>
                                <p class="text-muted">Create your first membership tier to get started.</p>
                                <a href="/admin/membership-tiers/create" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>Create Membership Tier
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>