<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Football Club</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
          <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/style.css" />
    <style>
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 1.5rem;
            height: 100%;
        }
        .stat-card.membership {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            color: #333;
        }
        .stat-card.users {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
            color: #333;
        }
        .stat-card.admin {
            background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
            color: #333;
        }
        .stat-icon {
            font-size: 2.5rem;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                </h1>
                <p class="lead mb-4">Welcome back, <%= user.first_name %> <%= user.surname %>!</p>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-1"><%= stats.total_users %></h3>
                            <p class="mb-0">Total Users</p>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="stat-card users">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-1"><%= stats.active_users %></h3>
                            <p class="mb-0">Active Users</p>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-user-check"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="stat-card membership">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-1"><%= membershipStats.active_memberships %></h3>
                            <p class="mb-0">Active Memberships</p>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-crown"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="stat-card admin">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-1"><%= stats.admin_count %></h3>
                            <p class="mb-0">Administrators</p>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-user-shield"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <a href="/admin/users" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-users me-1"></i>Manage Users
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/admin/membership-tiers" class="btn btn-outline-success w-100">
                                    <i class="fas fa-crown me-1"></i>Membership Tiers
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/admin/memberships" class="btn btn-outline-warning w-100">
                                    <i class="fas fa-id-card me-1"></i>Manage Memberships
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/admin/register" class="btn btn-outline-info w-100">
                                    <i class="fas fa-user-plus me-1"></i>Register User
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/admin/events" class="btn btn-outline-info w-100">
                                    <i class="fas fa-user-plus me-1"></i>Manage Events
                                </a>
                            </div>
                            <!-- Gear -->
                            <div class="col-md-3 mb-2">
                                <a href="/admin/gear" class="btn btn-outline-dark w-100">
                                    <i class="fas fa-toolbox me-1"></i>Manage Gear
                                </a>
                            </div>

                            <!-- Orders -->
                            <div class="col-md-3 mb-2">
                                <a href="/admin/orders" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-receipt me-1"></i>Order History
                                </a>
                            </div>

                            <!-- Refund Requests -->
                            <div class="col-md-3 mb-2">
                                <a href="/admin/refund-requests" class="btn btn-outline-danger w-100">
                                    <i class="fas fa-undo-alt me-1"></i>Manage Refund Requests
                                </a>
                            </div>

                            <!-- News -->
                            <div class="col-md-3 mb-2">
                                <a href="/admin/news" class="btn btn-outline-warning w-100">
                                    <i class="fas fa-newspaper me-1"></i>Manage News
                                </a>
                            </div>

                            <!-- FAQs -->
                            <div class="col-md-3 mb-2">
                                <a href="/admin/faqs" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-question-circle me-1"></i>Manage FAQs
                                </a>
                            </div>

                            <!-- Players -->
                            <div class="col-md-3 mb-2">
                                <a href="/admin/players" class="btn btn-outline-success w-100">
                                    <i class="fas fa-users-cog me-1"></i>Manage Players
                                </a>
                            </div>

                            <!-- Schedule -->
                            <div class="col-md-3 mb-2">
                                <a href="/admin/schedule" class="btn btn-outline-info w-100">
                                    <i class="fas fa-calendar-alt me-1"></i>Manage Schedule
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Recent Registrations -->
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>Recent Registrations</h5>
                    </div>
                    <div class="card-body">
                        <% if (recentUsers && recentUsers.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Role</th>
                                            <th>Registered</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% recentUsers.forEach(function(recentUser) { %>
                                            <tr>
                                                <td>
                                                    <strong><%= recentUser.first_name %> <%= recentUser.surname %></strong>
                                                    <br><small class="text-muted">@<%= recentUser.username %></small>
                                                </td>
                                                <td>
                                                    <span class="badge <%= recentUser.role === 'admin' ? 'bg-danger' : 'bg-primary' %>">
                                                        <%= recentUser.role %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(recentUser.created_at).toLocaleDateString() %></td>
                                                <td>
                                                    <a href="/admin/users/<%= recentUser.user_id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-3">
                                <a href="/admin/users" class="btn btn-sm btn-primary">View All Users</a>
                            </div>
                        <% } else { %>
                            <div class="text-center py-3">
                                <i class="fas fa-user-plus fa-2x text-muted mb-2"></i>
                                <p class="text-muted mb-0">No recent registrations found.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Expiring Memberships -->
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Expiring Memberships (7 days)</h5>
                    </div>
                    <div class="card-body">
                        <% if (expiringMemberships && expiringMemberships.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Tier</th>
                                            <th>Days Left</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% expiringMemberships.forEach(function(membership) { %>
                                            <tr>
                                                <td>
                                                    <strong><%= membership.first_name %> <%= membership.surname %></strong>
                                                    <br><small class="text-muted"><%= membership.email %></small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-warning"><%= membership.tier_name %></span>
                                                </td>
                                                <td>
                                                    <% if (membership.days_remaining <= 0) { %>
                                                        <span class="text-danger fw-bold">Expired</span>
                                                    <% } else if (membership.days_remaining <= 3) { %>
                                                        <span class="text-danger fw-bold"><%= membership.days_remaining %> days</span>
                                                    <% } else { %>
                                                        <span class="text-warning fw-bold"><%= membership.days_remaining %> days</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/memberships?status=active" class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-3">
                                <a href="/admin/memberships" class="btn btn-sm btn-warning">View All Memberships</a>
                            </div>
                        <% } else { %>
                            <div class="text-center py-3">
                                <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                <p class="text-muted mb-0">No memberships expiring soon.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Membership Statistics -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Membership Overview</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h4 class="text-primary"><%= membershipStats.total_memberships %></h4>
                                <p class="text-muted">Total Memberships</p>
                            </div>
                            <div class="col-md-4">
                                <h4 class="text-success"><%= membershipStats.active_memberships %></h4>
                                <p class="text-muted">Active Memberships</p>
                            </div>
                            <div class="col-md-4">
                                <h4 class="text-warning"><%= membershipStats.expired_memberships %></h4>
                                <p class="text-muted">Expired Memberships</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>