<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Team Players</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/player.css" />
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container mt-5 players-section">
    <h1 class="text-center mb-4">Meet the Team</h1>
    <div class="text-center mb-4">
      <a href="/manage-players" class="btn btn-primary">Manage Players</a>
    </div>

    <% 
      const roles = ['Goalkeeper', 'Defender', 'Midfielder', 'Forward'];
      roles.forEach(function(role) { 
        const rolePlayers = players.filter(p => p.position === role);
        if (rolePlayers.length > 0) { 
    %>
      <div class="role-container">
        <div class="role-title"><%= role %>s</div>
        <div class="row g-3">
          <% rolePlayers.forEach(function(player) { %>
            <div class="col-md-3">
              <a href="/players/<%= player.player_id %>" style="text-decoration:none; color:inherit;">
                <div class="player-card">
                  <img src="/images/<%= player.player_image %>" alt="<%= player.player_name %>" class="player-img">
                  <div class="player-info"><%= player.player_name %> - #<%= player.jersey_number %></div>
                  <div class="player-info"><%= player.position %></div>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </div>
    <% 
        }
      }); 
    %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
