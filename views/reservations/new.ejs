<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Cafe Reservation - Raffles Rangers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheet/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .time-slot {
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 15px;
            margin: 10px 0;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .time-slot:hover {
            border-color: #007bff;
            background-color: #f8f9fa;
        }
        .time-slot.selected {
            border-color: #007bff;
            background-color: #e7f3ff;
        }
        .time-slot.unavailable {
            background-color: #f8f9fa;
            color: #6c757d;
            cursor: not-allowed;
        }
        .calendar-container {
            max-width: 400px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Book Cafe Reservation
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <h5>Raffles Rangers Cafe</h5>
                            <p class="text-muted">Experience great food and atmosphere at our club cafe</p>
                        </div>

                        <form id="reservationForm">
                            <div class="row">
                                <!-- Date Selection -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label class="form-label">
                                            <i class="fas fa-calendar me-2"></i>
                                            Select Date
                                        </label>
                                        <div class="calendar-container">
                                            <input type="text" id="datePicker" class="form-control" placeholder="Click to select date" readonly>
                                        </div>
                                    </div>
                                </div>

                                <!-- Party Size -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="partySize" class="form-label">
                                            <i class="fas fa-users me-2"></i>
                                            Party Size
                                        </label>
                                        <select id="partySize" class="form-select">
                                            <option value="1">1 Person</option>
                                            <option value="2">2 People</option>
                                            <option value="3">3 People</option>
                                            <option value="4">4 People</option>
                                            <option value="5">5 People</option>
                                            <option value="6">6 People</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Time Selection -->
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-clock me-2"></i>
                                    Select Time Slot
                                </label>
                                <div id="timeSlots" class="row">
                                    <div class="col-12 text-center text-muted">
                                        <p>Please select a date first to see available time slots</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Comment -->
                            <div class="mb-4">
                                <label for="comment" class="form-label">
                                    <i class="fas fa-comment me-2"></i>
                                    Special Requests (Optional)
                                </label>
                                <textarea id="comment" class="form-control" rows="3" placeholder="Any special requests or dietary requirements..."></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" id="bookButton" class="btn btn-primary btn-lg" disabled>
                                    <i class="fas fa-check me-2"></i>
                                    Book Reservation
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-check-circle me-2"></i>
                        Reservation Confirmed!
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Your reservation has been successfully booked!</p>
                    <div id="reservationDetails"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="/reservations/my-reservations" class="btn btn-primary">View My Reservations</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        let selectedDate = null;
        let selectedTime = null;

        // Initialize date picker
        const datePicker = flatpickr("#datePicker", {
            dateFormat: "Y-m-d",
            minDate: "today",
            maxDate: new Date().fp_incr(30), // 30 days from today
            onChange: function(selectedDates, dateStr, instance) {
                selectedDate = dateStr;
                loadTimeSlots(dateStr);
            }
        });

        // Load time slots for selected date
        async function loadTimeSlots(date) {
            try {
                const response = await fetch(`/reservations/slots/${date}`);
                const slots = await response.json();
                
                const timeSlotsContainer = document.getElementById('timeSlots');
                timeSlotsContainer.innerHTML = '';
                
                slots.forEach(slot => {
                    const col = document.createElement('div');
                    col.className = 'col-md-4 col-sm-6';
                    
                    const timeSlotDiv = document.createElement('div');
                    timeSlotDiv.className = `time-slot ${slot.available ? '' : 'unavailable'}`;
                    timeSlotDiv.innerHTML = `
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold">${slot.timeFormatted}</span>
                            <small class="text-muted">${slot.booked}/${slot.capacity}</small>
                        </div>
                    `;
                    
                    if (slot.available) {
                        timeSlotDiv.addEventListener('click', () => selectTimeSlot(slot.time, timeSlotDiv));
                    }
                    
                    col.appendChild(timeSlotDiv);
                    timeSlotsContainer.appendChild(col);
                });
            } catch (error) {
                console.error('Error loading time slots:', error);
                document.getElementById('timeSlots').innerHTML = '<div class="col-12 text-center text-danger">Error loading time slots</div>';
            }
        }

        // Select time slot
        function selectTimeSlot(time, element) {
            // Remove previous selection
            document.querySelectorAll('.time-slot').forEach(slot => {
                slot.classList.remove('selected');
            });
            
            // Add selection to clicked slot
            element.classList.add('selected');
            selectedTime = time;
            
            // Enable book button
            document.getElementById('bookButton').disabled = false;
        }

        // Handle form submission
        document.getElementById('reservationForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!selectedDate || !selectedTime) {
                alert('Please select both date and time');
                return;
            }
            
            const bookButton = document.getElementById('bookButton');
            bookButton.disabled = true;
            bookButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Booking...';
            
            try {
                const response = await fetch('/reservations', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        date: selectedDate,
                        time: selectedTime,
                        party_size: document.getElementById('partySize').value,
                        comment: document.getElementById('comment').value
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Show success modal
                    document.getElementById('reservationDetails').innerHTML = `
                        <p><strong>Date:</strong> ${selectedDate}</p>
                        <p><strong>Time:</strong> ${selectedTime.slice(0, 5)}</p>
                        <p><strong>Party Size:</strong> ${document.getElementById('partySize').value} people</p>
                        ${document.getElementById('comment').value ? `<p><strong>Special Requests:</strong> ${document.getElementById('comment').value}</p>` : ''}
                    `;
                    
                    const successModal = new bootstrap.Modal(document.getElementById('successModal'));
                    successModal.show();
                    
                    // Reset form
                    document.getElementById('reservationForm').reset();
                    document.getElementById('timeSlots').innerHTML = '<div class="col-12 text-center text-muted"><p>Please select a date first to see available time slots</p></div>';
                    selectedDate = null;
                    selectedTime = null;
                } else {
                    alert(result.error || 'Failed to book reservation');
                }
            } catch (error) {
                console.error('Error booking reservation:', error);
                alert('Failed to book reservation. Please try again.');
            } finally {
                bookButton.disabled = false;
                bookButton.innerHTML = '<i class="fas fa-check me-2"></i>Book Reservation';
            }
        });
    </script>
</body>
</html>
