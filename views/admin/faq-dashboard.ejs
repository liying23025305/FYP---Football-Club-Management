<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin FAQ Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/style.css" />
  <link rel="stylesheet" href="/stylesheet/faq.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>FAQ Management</h2>
      <div>
        <a href="/admin/news" class="btn btn-secondary me-2">Manage News</a>
        <a href="/admin/faq" class="btn btn-primary">Manage FAQ</a>
        <button id="add-faq-btn" class="btn btn-success ms-2"><i class="bi bi-plus-lg"></i> Add New FAQ</button>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Total FAQ</h5>
            <p class="display-6" id="faq-stat-total">-</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Answered</h5>
            <p class="display-6" id="faq-stat-answered">-</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Pending</h5>
            <p class="display-6" id="faq-stat-pending">-</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Archived</h5>
            <p class="display-6" id="faq-stat-archived">-</p>
          </div>
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3 mb-2">
        <label for="faq-status-filter" class="form-label">Filter by Status:</label>
        <select id="faq-status-filter" class="form-select">
          <option value="">All</option>
          <option value="pending">Pending</option>
          <option value="answered">Answered</option>
          <option value="archived">Archived</option>
        </select>
      </div>
      <div class="col-md-3 mb-2">
        <label for="faq-category-filter-admin" class="form-label">Category:</label>
        <select id="faq-category-filter-admin" class="form-select">
          <option value="">All Categories</option>
          <!-- Categories will be populated by JS -->
        </select>
      </div>
      <div class="col-md-6 d-flex align-items-end">
        <div id="faq-admin-message" class="w-100"></div>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-hover align-middle" id="faq-admin-table">
        <thead class="table-light">
          <tr>
            <th>Order</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Category</th>
            <th>Status</th>
            <th>Publish</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- FAQ rows will be rendered by JS -->
        </tbody>
      </table>
    </div>
    <!-- Add/Edit FAQ Modal -->
    <div class="modal fade" id="faq-modal" tabindex="-1" aria-labelledby="faqModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <form id="faq-modal-form">
            <div class="modal-header">
              <h5 class="modal-title" id="faqModalLabel">Add/Edit FAQ</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="modal-faq-question" class="form-label">Question</label>
                <textarea class="form-control" id="modal-faq-question" required></textarea>
              </div>
              <div class="mb-3">
                <label for="modal-faq-answer" class="form-label">Answer</label>
                <textarea class="form-control" id="modal-faq-answer"></textarea>
              </div>
              <div class="mb-3">
                <label for="modal-faq-category" class="form-label">Category</label>
                <select class="form-select" id="modal-faq-category">
                  <option value="">Select a category</option>
                  <!-- Categories will be populated by JS -->
                </select>
              </div>
              <div class="mb-3">
                <label for="modal-faq-status" class="form-label">Status</label>
                <select class="form-select" id="modal-faq-status" required>
                  <option value="pending">Pending</option>
                  <option value="answered">Answered</option>
                  <option value="archived">Archived</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="modal-faq-publish" class="form-label">Publish Status</label>
                <select class="form-select" id="modal-faq-publish">
                  <option value="no">Unpublished</option>
                  <option value="yes">Published</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="modal-faq-order" class="form-label">Display Order</label>
                <input type="number" class="form-control" id="modal-faq-order" min="0" value="0">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Save</button>   <!-- TODO: Ensure admin message is seen after admin add/edit a FAQ & confirm via the localhost dialog, just like you do for delete. -->
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
  <script src="/js/faq.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 