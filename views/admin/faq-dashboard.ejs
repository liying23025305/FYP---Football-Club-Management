<%- include('../partials/navbar') %>
<div class="container my-5">
  <h2 class="mb-4">FAQ Management Dashboard</h2>

  <!-- Status and Category Filter -->
  <div class="mb-3">
    <label for="faq-status-filter" class="form-label">Filter by Status:</label>
    <select id="faq-status-filter" class="form-select w-auto d-inline-block">
      <option value="">All</option>
      <option value="pending">Pending</option>
      <option value="answered">Answered</option>
      <option value="archived">Archived</option>
    </select>
    <!-- Category filter dropdown -->
    <label for="faq-category-filter-admin" class="form-label ms-3">Category:</label>
    <select id="faq-category-filter-admin" class="form-select w-auto d-inline-block">
      <option value="">All Categories</option>
      <!-- Categories will be populated by JS -->
    </select>
    <button id="add-faq-btn" class="btn btn-success ms-3">Add New FAQ</button>
  </div>

  <div id="faq-admin-message" class="mb-3"></div>

  <div class="table-responsive">
    <table class="table table-bordered align-middle" id="faq-admin-table">
      <thead class="table-light">
        <tr>
          <th>Order</th>
          <th>Question</th>
          <th>Answer</th>
          <th>Category</th>
          <th>Status</th>
          <th>Publish</th> <!-- Publish status column -->
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <!-- FAQ rows will be rendered by JS -->
      </tbody>
    </table>
  </div>

  <!-- Add/Edit FAQ Modal -->
  <div class="modal fade" id="faq-modal" tabindex="-1" aria-labelledby="faqModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="faq-modal-form">
          <div class="modal-header">
            <h5 class="modal-title" id="faqModalLabel">Add/Edit FAQ</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="modal-faq-question" class="form-label">Question</label>
              <textarea class="form-control" id="modal-faq-question" required></textarea>
            </div>
            <div class="mb-3">
              <label for="modal-faq-answer" class="form-label">Answer</label>
              <textarea class="form-control" id="modal-faq-answer"></textarea>
            </div>
            <div class="mb-3">
              <label for="modal-faq-category" class="form-label">Category</label>
              <select class="form-select" id="modal-faq-category">
                <option value="">Select a category</option>
                <!-- Categories will be populated by JS -->
              </select>
            </div>
            <div class="mb-3">
              <label for="modal-faq-status" class="form-label">Status</label>
              <select class="form-select" id="modal-faq-status" required>
                <option value="pending">Pending</option>
                <option value="answered">Answered</option>
                <option value="archived">Archived</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="modal-faq-publish" class="form-label">Publish Status</label>
              <select class="form-select" id="modal-faq-publish">
                <option value="no">Unpublished</option>
                <option value="yes">Published</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="modal-faq-order" class="form-label">Display Order</label>
              <input type="number" class="form-control" id="modal-faq-order" min="0" value="0">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
<!-- Admin FAQ JS -->
<script src="/js/faq.js"></script> 