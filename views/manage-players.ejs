<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Players</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body>
  <%- include('partials/navbar') %>
  <main class="container mt-5">
    <h1 class="text-center mb-4">Manage Players</h1>

    <!-- Players Table -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Jersey #</th>
          <th>Position</th>
          <th>Biography</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% players.forEach(function(player) { %>
          <tr>
            <td>
              <a href="/manage-players?edit=<%= player.player_id %>"><%= player.player_name %></a>
            </td>
            <td><%= player.jersey_number %></td>
            <td><%= player.position %></td>
            <td style="max-width:250px; white-space:pre-line;"><%= player.biography %></td>
            <td>
              <a href="/manage-players?edit=<%= player.player_id %>" class="btn btn-warning btn-sm mb-1">Edit</a>
              <form action="/players/delete/<%= player.player_id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this player?');">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Edit Player Form (shows only if editing) -->
    <% if (editPlayer) { %>
      <div class="card mb-4">
        <div class="card-body">
          <h3>Edit Player</h3>
          <form action="/players/edit/<%= editPlayer.player_id %>" method="POST">
            <div class="mb-3">
              <label>Name</label>
              <input type="text" name="player_name" class="form-control" value="<%= editPlayer.player_name %>" required>
            </div>
            <div class="mb-3">
              <label>Jersey Number</label>
              <input type="number" name="jersey_number" class="form-control" value="<%= editPlayer.jersey_number %>" required>
            </div>
            <div class="mb-3">
              <label>Position</label>
              <input type="text" name="position" class="form-control" value="<%= editPlayer.position %>" required>
            </div>
            <div class="mb-3">
              <label>Biography</label>
              <textarea name="biography" class="form-control"><%= editPlayer.biography %></textarea>
            </div>
            <button type="submit" class="btn btn-success">Update Player</button>
            <a href="/manage-players" class="btn btn-secondary">Cancel</a>
          </form>
        </div>
      </div>
    <% } %>

    <!-- Add New Player Form -->
    <div class="card">
      <div class="card-body">
        <h3>Add New Player</h3>
        <form action="/players/add" method="POST">
          <div class="mb-3">
            <label>Name</label>
            <input type="text" name="player_name" class="form-control" required>
          </div>
          <div class="mb-3">
            <label>Jersey Number</label>
            <input type="number" name="jersey_number" class="form-control" required>
          </div>
          <div class="mb-3">
            <label>Position</label>
            <input type="text" name="position" class="form-control" required>
          </div>
          <div class="mb-3">
            <label>Biography</label>
            <textarea name="biography" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Add Player</button>
        </form>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html>